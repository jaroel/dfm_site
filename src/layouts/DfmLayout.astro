---
import Contactbar from "../components/Contactbar.astro";
import bgImage from "~/assets/img/dfm_studio-blurred.jpg";
import "@fontsource/cabin";
---

<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <title>Dinxper FM - het swingende geluid van Dinxperlo</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body class="text-slate-50 h-screen bg-center bg-cover bg-fixed font-[Cabin]">
    <div class="h-100 overflow-auto bg-black/75">
      <div class="max-w-7xl mx-auto">
        <Contactbar />
        <slot />
        <Contactbar />
      </div>
    </div>
  </body>
</html>
<style define:vars={{ bgUrl: `url(${bgImage.src})` }}>
  body {
    background-image: var(--bgUrl);
  }
</style>
